<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tbody>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<% if user == current_user %>
  <%= link_to edit_user_path(current_user) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>