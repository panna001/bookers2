<%= render "users/info", user:@user %>
<%= render "books/new", book:@book %>

<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= attachement_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
