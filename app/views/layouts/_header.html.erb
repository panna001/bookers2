<header class="mb-3">
  <nav class="navbar navbar-expand bg-dark">
    <div class="container">
      <%= link_to "Bookers", root_path, class: "navbar-brand text-light" %>
      <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to user_path(current_user), class: "nav-link text-light" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to  users_path, class: "nav-link text-light" do %>
              <i class="fas fa-users"></i> Users
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to books_path, class: "nav-link text-light" do %>
              <i class="fas fa-book-open"></i> Books
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
              <i class="fas fa-sign-out-alt"></i> logout
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link text-light" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to homes_about_path, class: "nav-link text-light" do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
              <i class="fas fa-user-plus"></i> sign up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-light" do %>
              <i class="fas fa-sign-in-alt"></i> login
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
  <div class="text-center mt-2">
    <%= render "search/form" %>
  </div>
  <span class="text-success"><%= notice %></span>
</header>