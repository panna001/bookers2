<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), remote: true, method: :delete, style: "color: red;" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), remote: true, method: :post, style: "color: blue;" do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>